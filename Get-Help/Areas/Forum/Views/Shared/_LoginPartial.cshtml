@using Microsoft.AspNetCore.Identity
@using Get_Help.Infrastructure.Data.Models
@inject SignInManager<Agent> ClientSignInManager

<ul class="navbar-nav">
    @if (ClientSignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a asp-area="Agent" asp-controller="Account" asp-action="ChangePassword" class="nav-link btn btn-link text-dark" title="Change Password">@User.Identity?.Name</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Admin" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
</ul>