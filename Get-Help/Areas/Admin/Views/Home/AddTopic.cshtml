@using Get_Help.Core.Models.Admin
@model AddTopicModel

<section>
    <form id="registerForm" method="post">
        <h2>Create new Topic</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
            <input hidden asp-for="@Model.ServiceId" class="form-control" aria-required="true" placeholder="ServiceId" />
            <label asp-for="@Model.ServiceId">ServiceId</label>
            <span asp-validation-for="@Model.ServiceId" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="@Model.Name" class="form-control" aria-required="true" placeholder="Name" />
            <label asp-for="@Model.Name">Name</label>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Add</button>
    </form>
</section>